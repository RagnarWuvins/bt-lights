<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MLOverlay" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/custom_theme_background_color</item>
        <item name="android:textColor">@color/custom_theme_text_color</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@android:style/Theme.Dialog</item>
        <item name="android:listViewStyle">@android:style/Theme.Dialog</item>
        <item name="android:windowBackground">@color/custom_theme_background_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="ChannelSetup" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/semiTransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#555555</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="CodeFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="CodeFont.Big">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="CodeFont.Medium">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CodeFont.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#555555</item>
    </style>

    <style name="Spacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Spacer.Big" parent="@style/Spacer">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Pager">
        <item name="android:textColor">#14A804</item>
    </style>

</resources>