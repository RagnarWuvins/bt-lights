<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bneumann.btlights"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".BTLightsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutBTLightsActivity"
            android:label="@string/aw_title" />
        <activity
            android:name=".FunctionGrid"
            android:label="@string/fg_title" />
        <activity
            android:name=".BTModule"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/bm_title"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="Settings"></activity>
        <activity android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:name="LogViewer"></activity>
    </application>

</manifest>